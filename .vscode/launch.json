	"version": "0.2.0",
	"configurations": [
		{
			"type": "pwa-node",
			"request": "launch",
			"runtimeVersion": "14",
			"name": "run current file",
			"program": "${file}",
			"outFiles": ["${workspaceFolder}/dist/**/*.js"],
			"sourceMaps": true,
			"console": "integratedTerminal",
			"preLaunchTask": "tsc:watch",
			"outputCapture": "std"
